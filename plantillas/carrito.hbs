{{#if carrito.length }}
    <button class="btn__cerrarCarrito"><i class="fas fa-times-circle"></i></button>
 
    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Foto</th>
            <th>Cantidad</th>
            <th>Envio</th>
            <th>Acción</th>
        </tr>

        {{#each carrito}}
        <tr>
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td>{{marca}}</td>
            <td>
                <img style="display:block; margin: 0 auto;" src="{{foto}}" width="50" alt="{{nombre}}">
            </td>
            <td>{{cantidad}}</td>
            
            {{#if envio}}
                <td>Si</td>
            {{else}}
                <td>No</td>
            {{/if}}
            
            <td>
                <button onclick="carritoController.borrarProductoCarrito({{id}})" class="btn__borrarDelCarrito"><img src="../img/svg/and_bag_ecommerce_remove_shopping_icon.svg" alt=""></button>
            </td>
        </tr>
         {{/each}}
    </table>
    <button class="btn__enviarCarrito" onclick="carritoController.enviarCarrito()">Enviar</button>
{{else}}
    <button class="btn__cerrarCarrito"><i class="fas fa-times-circle"></i></button>
    <h2>El carrito está vacío</h2>
    <img src="../img/svg/and_bag_delete_ecommerce_shopping_icon.svg" alt="Bag vacia" class="carrito-img">
{{/if}}