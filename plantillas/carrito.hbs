{{#if carrito.length }}
    <button class="btn__cerrarCarrito"><i class="fas fa-times-circle"></i></button>
 
    <h3>Tu carrito:</h3>

    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Foto</th>
            <th>Cantidad</th>
            <th>Envio</th>
            <th>Acción</th>
        </tr>

        {{#each carrito}}
        <tr>
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td>{{marca}}</td>
            <td>
                <img style="display:block; margin: 0 auto;" src="{{foto}}" width="50" alt="{{nombre}}">
            </td>
            <td>{{cantidad}}</td>
            
            {{#if envio}}
                <td>Si</td>
            {{else}}
                <td>No</td>
            {{/if}}
            
            <td>
                <button onclick="carritoController.borrarProductoCarrito({{id}})" class="btn__borrarDelCarrito"><img src="../img/svg/99747_recycle_bin_full_icon.png" alt=""></button>
            </td>
        </tr>
         {{/each}}
    </table>
    <h4>Total: $</h4>
    <button class="btn__enviarCarrito" onclick="carritoController.enviarCarrito()">Enviar</button>
{{else}}
    <button class="btn__cerrarCarrito"><i class="fas fa-times-circle"></i></button>
    <h2>El carrito está vacío</h2>
    <img src="../img/svg/9021613_smiley_sad_bold_icon.svg" alt="Bag vacia" class="carrito-img">
{{/if}}